# 환경변수 설정
PORT=3000
NODE_ENV=development

# 데이터베이스 설정
MONGODB_URI=mongodb://localhost:27017/ai-dev-system

# JWT 설정
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# OpenAI API 설정
OPENAI_API_KEY=your-openai-api-key-here

# 로그 설정
LOG_LEVEL=info
LOG_FILE=logs/app.log

# API 설정
API_VERSION=v1
API_RATE_LIMIT=100

# 보안 설정
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# 파일 업로드 설정
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# 개발용 설정
DEBUG=true
ENABLE_SWAGGER=true
